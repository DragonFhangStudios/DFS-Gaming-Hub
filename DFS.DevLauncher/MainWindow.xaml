<Window x:Class="DFS.DevLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dragon Fhang Studios - Dev Dashboard" Height="800" Width="800"
        ResizeMode="CanResize" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="30" HorizontalAlignment="Center">
        <TextBlock Text="🐉 Dragon Fhang Studios" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="0 0 0 30"
                   TextAlignment="Center"/>

        <Button Content="🧩 Puzzle Framework" 
                Click="LaunchPuzzle_Click" 
                Margin="0 10" 
                Height="45" 
                Width="350"
                FontSize="16" 
                Padding="10" 
                ToolTip="Launch debug puzzle test grid"/>

        <Button Content="💼 Project Syndicate" 
                Click="LaunchSyndicate_Click" 
                Margin="0 10" 
                Height="45" 
                Width="350"
                FontSize="16" 
                Padding="10" 
                ToolTip="Launch Project Syndicate dashboard"/>

        <Button Content="🧙‍♂️ Character Forge"
                Click="LaunchCharacterForge_Click"
                Width="240"
                Height="40"
                Margin="0,10"
                ToolTip="Launch Character Forge dashboard"/>

        <TextBlock x:Name="StatusLog" 
                   Margin="0 30 0 0" 
                   FontStyle="Italic" 
                   FontSize="12" 
                   Foreground="Gray" 
                   TextAlignment="Center"/>
        <Separator Margin="0 20 0 10"/>
        <!-- <TextBlock Text="🧪 JobSystem Test Panel" FontSize="18" FontWeight="Bold"/>
        <Button Content="Run Delivery Job Test" Click="RunDeliveryJob_Click" Margin="0 10" Height="35"/>
        <ListBox x:Name="JobOutputPanel" Height="500" Margin="0 10"/> -->
    </StackPanel>
</Window>
