<Window x:Class="DFS.DevLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dragon Fhang Studios - Dev Dashboard" Height="400" Width="600"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="30" HorizontalAlignment="Center">
        <TextBlock Text="🐉 Dragon Fhang Studios" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="0 0 0 30"
                   TextAlignment="Center"/>

        <Button Content="🧩 Puzzle Framework" 
                Click="LaunchPuzzle_Click" 
                Margin="0 10" 
                Height="45" 
                Width="350"
                FontSize="16" 
                Padding="10" 
                ToolTip="Launch debug puzzle test grid"/>

        <Button Content="💼 Project Syndicate" 
                Click="LaunchSyndicate_Click" 
                Margin="0 10" 
                Height="45" 
                Width="350"
                FontSize="16" 
                Padding="10" 
                ToolTip="Launch Project Syndicate dashboard"/>

        <TextBlock x:Name="StatusLog" 
                   Margin="0 30 0 0" 
                   FontStyle="Italic" 
                   FontSize="12" 
                   Foreground="Gray" 
                   TextAlignment="Center"/>
    </StackPanel>
</Window>
