<UserControl x:Class="DFS.CharacterForge.Views.CharacterSheet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Trent" FontSize="28" Foreground="LightGray" FontWeight="Bold"/>
            <TextBlock Text="Age: 27" FontSize="16" Foreground="LightGray" Margin="0,5"/>
            <TextBlock Text="Role: Chief Petty Officer, Coast Guard" FontSize="16" Foreground="LightGray" Margin="0,5"/>
            <Separator Margin="0,10"/>

            <TextBlock Text="Appearance" FontSize="20" Foreground="LightGray" FontWeight="SemiBold"/>
            <TextBlock Text="Tall, buzz cut, gray fatigue uniform, utility belt." 
                       TextWrapping="Wrap" Foreground="LightGray" Margin="0,5"/>

            <TextBlock Text="Equipment" FontSize="20" Foreground="LightGray" FontWeight="SemiBold" Margin="10,20,0,5"/>
            <ListBox Height="120" Background="#2e2e2e" Foreground="White">
                <ListBoxItem Content="Combat Knife"/>
                <ListBoxItem Content="Radio Comm"/>
                <ListBoxItem Content="Military Rations"/>
                <ListBoxItem Content="ID Tag Necklace"/>
            </ListBox>
        </StackPanel>

        <!-- Right Panel -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Background" FontSize="20" FontWeight="Bold" Foreground="LightGray" Margin="0,0,0,10"/>
            <TextBox TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Text="Trent served 10 years in the Coast Guard, becoming one of the youngest CPOs in his region. Calm under pressure, loyal to his squad, and skilled in both land and sea tactics. After the collapse, he kept to his training and now serves as a protector of isolated coastal communities."
                     Height="150" 
                     Background="#2e2e2e" 
                     Foreground="White" 
                     BorderBrush="#444" 
                     FontSize="14" 
                     Padding="10"/>

            <TextBlock Text="Skills" FontSize="20" FontWeight="Bold" Foreground="LightGray" Margin="0,20,0,10"/>
            <UniformGrid Columns="2" Rows="3" Margin="0,0,0,20">
                <TextBlock Text="Navigation: Expert" Foreground="LightGray"/>
                <TextBlock Text="Marksmanship: Advanced" Foreground="LightGray"/>
                <TextBlock Text="Survival: Intermediate" Foreground="LightGray"/>
                <TextBlock Text="Leadership: Expert" Foreground="LightGray"/>
                <TextBlock Text="Repair: Basic" Foreground="LightGray"/>
                <TextBlock Text="Swimming: Advanced" Foreground="LightGray"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</UserControl>
